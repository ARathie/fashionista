{
    "manifest_version": 3,
    "name": "Website Talker",
    "version": "1.0",
    "description": "A Chrome extension to send POST requests to a server.",
    "permissions": ["activeTab", "identity"],
    "host_permissions": ["http://*/*", "https://*/*"],
    "action": {
      "default_icon": "icon.png",
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["*://*.nike.com/*"],
        "js": ["content_script.js"],
        "css": ["styles.css"]
      }
    ],
    "background": {
      "service_worker": "background.js"
    },
    "web_accessible_resources": [
      {
        "resources": [ "*.png" ],
        "matches": ["http://*/*", "https://*/*"]
      },
      {
        "resources": [ "*.html" ],
        "matches": ["http://*/*", "https://*/*"]
      }
    ],
    "oauth2": {
      "client_id": "258654283607-7j5jrop061etuloq9idduinkkg9qs9bi.apps.googleusercontent.com",
      "scopes": ["https://www.googleapis.com/auth/userinfo.email"]
    }
  }
