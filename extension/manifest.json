{
    "manifest_version": 3,
    "name": "Website Talker",
    "version": "1.0",
    "description": "A Chrome extension to send POST requests to a server.",
    "permissions": ["activeTab"],
    "host_permissions": ["http://*/*", "https://*/*"],
    "action": {
      "default_icon": "icon.png",
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["http://*/*", "https://*/*"],
        "js": ["content_script.js"],
        "css": ["styles.css"]
      }
    ],
    "background": {
      "service_worker": "background.js"
    },
    "web_accessible_resources": [
      {
        "resources": [ "*.png" ],
        "matches": ["http://*/*", "https://*/*"]
      },
      {
        "resources": [ "*.html" ],
        "matches": ["http://*/*", "https://*/*"]
      }
    ]
  }
